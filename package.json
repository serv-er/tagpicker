{
  "name": "tagpicker",
  "displayName": "TagPicker",
  "description": "Search and refactor JSX tags quickly in any open VS Code file",
  "version": "0.1.0",
  "preview": true,
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:TagPicker.pickTags",
    "onCommand:TagPicker.clearHighlights",
    "onCommand:TagPicker.undo",
    "onCommand:TagPicker.redo"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "TagPicker.pickTags",
        "title": "TagPicker: Pick JSX Tags"
      },
      {
        "command": "TagPicker.clearHighlights",
        "title": "TagPicker: Clear JSX Tag Highlights"
      },
      {
        "command": "TagPicker.undo",
        "title": "TagPicker: Undo Last JSX Update"
      },
      {
        "command": "TagPicker.redo",
        "title": "TagPicker: Redo Last JSX Update"
      }
    ],
    "keybindings": [
      {
        "command": "TagPicker.pickTags",
        "key": "ctrl+shift+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/yourusername/tagpicker.git"
},

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0"
  },
  "publisher": "SarveshBaranwal"
}
